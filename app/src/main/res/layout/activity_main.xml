<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/radioGrp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0.2"
        >
        <RadioButton
            android:id="@+id/rbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DDA Line Drawing Algorithm"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            ></RadioButton>
        <LinearLayout
            android:id="@+id/llRbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintVertical_bias="0.3"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >
            <EditText
                android:id="@+id/et1_llRbtn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="X"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et2_llRbtn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="Y"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et3_llRbtn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="R"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et4_llRbtn1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="R"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >
                <TextView
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First point"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second point"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <RadioButton
            android:id="@+id/rbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bresenham Algorithm"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            ></RadioButton>
        <LinearLayout
            android:id="@+id/llRbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintVertical_bias="0.3"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >
                <EditText
                    android:id="@+id/et1_llRbtn2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:hint="X"
                    android:textColorHint="@color/grey_black"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/et2_llRbtn2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:hint="Y"
                    android:textColorHint="@color/grey_black"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/et3_llRbtn2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:hint="R"
                    android:textColorHint="@color/grey_black"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/et4_llRbtn2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:hint="R"
                    android:textColorHint="@color/grey_black"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >
                <TextView
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First point"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second point"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <RadioButton
            android:id="@+id/rbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MidPoint Circle Algorithm"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="25sp"
            ></RadioButton>
        <LinearLayout
            android:id="@+id/llRbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintVertical_bias="0.3"
            android:weightSum="3"
            >
            <EditText
                android:id="@+id/et1_llRbtn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="X"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et2_llRbtn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="Y"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/et3_llRbtn3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:hint="Radius"
                android:textColorHint="@color/grey_black"
                android:textSize="25sp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </RadioGroup>
    <Button
        android:id="@+id/submitBtn"
        app:layout_constraintTop_toBottomOf="@id/radioGrp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Result"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/grey_black"
        app:layout_constraintVertical_bias="0.05"
        />

    <TextView
        android:id="@+id/bottomTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="সংশপ্তক"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/bensenhandwriting"
        app:layout_constraintVertical_bias="0.6"
        />

    <TextView
        android:id="@+id/warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_light"
        android:includeFontPadding="false"
        android:text="@string/warning"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomTv"
        android:layout_marginHorizontal="15dp"
         />
    <TextView
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titillium_web_light"
        android:includeFontPadding="false"
        android:text="v 1.0"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomTv"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.98"
        />

</androidx.constraintlayout.widget.ConstraintLayout>